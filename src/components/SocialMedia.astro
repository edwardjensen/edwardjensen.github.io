---
// Component for social media links
interface WebLink {
  name: string;
  url: string;
  icon: string;
}

const weblinks: WebLink[] = [
  {
    name: "Website",
    url: "https://www.edwardjensen.net/",
    icon: "globe"
  },
  {
    name: "GitHub",
    url: "https://github.com/edwardjensen",
    icon: "github"
  },
  {
    name: "LinkedIn", 
    url: "https://www.linkedin.com/in/edwardjensen",
    icon: "linkedin"
  },
  {
    name: "RSS",
    url: "https://www.edwardjensen.net/feed.xml",
    icon: "rss-fill"
  }
];
---

<div class="space-y-4">
  <h3 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Me, elsewhere online</h3>
  
  <div class="flex justify-center">
    <ul class="flex items-center justify-center space-x-8 text-5xl my-2">
      {weblinks.map((link) => (
        <li>
          <a href={link.url} 
             target="_blank"
             title={link.name}
             class="hover:scale-110 transition-transform">
            <i class={`bi bi-${link.icon} text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 transition-colors`}></i>
          </a>
        </li>
      ))}
    </ul>
  </div>
</div>

