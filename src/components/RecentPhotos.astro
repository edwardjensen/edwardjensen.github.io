---
// Component for displaying recent photos from micro.edwardjensen.net
interface Photo {
  url: string;
  content_html: string;
  date_published: string;
  _microblog: {
    thumbnail_url: string;
  };
}

// Extract alt text and caption from HTML content
function extractImageData(content_html: string) {
  // Extract caption (text before first </p>)
  const captionMatch = content_html.split('</p>')[0];
  const caption = captionMatch?.replace(/<[^>]*>/g, '') || '';
  
  // Extract alt text from img tag
  const altMatch = content_html.match(/alt="([^"]*)"/);
  const alt_text = altMatch?.[1] || '';
  
  return { caption, alt_text };
}

// Fetch photos data
let photos: Photo[] = [];

try {
  const response = await fetch('https://micro.edwardjensen.net/photos/index.json');
  const data = await response.json();
  photos = data.items
    .sort((a: Photo, b: Photo) => new Date(b.date_published).getTime() - new Date(a.date_published).getTime())
    .slice(0, 4);
} catch (error) {
  console.error('Failed to fetch photos:', error);
}
---

<div class="space-y-4">
  <h3 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Recent photography</h3>
  
  <p class="italic pb-3 leading-4 text-center text-gray-700 dark:text-gray-300">
    Clicking on each of the photos will take you to my 
    <a href="https://micro.edwardjensen.net/" target="_blank" 
       class="font-bold text-blue-600 dark:text-blue-400 hover:underline hover:text-blue-500 dark:hover:text-blue-300">
      microblog, micro.edwardjensen.net
    </a>.
  </p>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {photos.length > 0 ? photos.map((photo) => {
      const { caption, alt_text } = extractImageData(photo.content_html);
      return (
        <a href={photo.url} target="_blank" class="block">
          <div class="flex justify-center items-center">
            <img 
              src={photo._microblog.thumbnail_url} 
              title={caption}
              alt={alt_text}
              class="rounded shadow-md w-full max-h-60 object-cover hover:opacity-90 transition-opacity"
            />
          </div>
        </a>
      );
    }) : (
      <div class="col-span-full text-center text-gray-600 dark:text-gray-400 py-8">
        <p>Recent photos from micro.edwardjensen.net will appear here.</p>
        <p class="text-sm mt-2">Loading from external feed...</p>
      </div>
    )}
  </div>
</div>

